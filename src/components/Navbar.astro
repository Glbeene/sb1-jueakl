---
import { Icon } from '@iconify/react';

const navItems = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Episodes', href: '/episodes' },
  { label: 'Blog', href: '/blog' },
  { label: 'Contact', href: '/contact' },
];

const socialLinks = [
  { platform: 'YouTube', url: 'https://www.youtube.com/@LimitlessLivinMarriage', icon: 'simple-icons:youtube' },
  { platform: 'TikTok', url: 'https://www.tiktok.com/@limitlesslivin', icon: 'simple-icons:tiktok' },
  { platform: 'Instagram', url: 'https://www.instagram.com/limitlesslivin/', icon: 'simple-icons:instagram' },
  { platform: 'Facebook', url: 'https://www.facebook.com/profile.php?id=61566993825036', icon: 'simple-icons:facebook' }
];
---

<nav class="fixed w-full bg-white/95 backdrop-blur-sm z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-20 items-center">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="flex items-center gap-3">
          <img src="/images/logo.png" alt="Limitless Livin'" class="h-12 w-auto sm:h-16" />
          <span class="text-xl sm:text-2xl font-display font-bold text-primary">
            Limitless Livin'
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex md:items-center">
        <div class="flex space-x-8 mr-8">
          {navItems.map((item) => (
            <a
              href={item.href}
              class="inline-flex items-center px-1 pt-1 text-sm font-medium text-secondary hover:text-primary transition"
            >
              {item.label}
            </a>
          ))}
        </div>
        <div class="flex items-center space-x-4 border-l pl-8">
          {socialLinks.map(({ platform, url, icon }) => (
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-500 hover:text-primary transition"
              aria-label={platform}
            >
              <span class="sr-only">{platform}</span>
              <Icon client:load icon={icon} width="20" height="20" />
            </a>
          ))}
        </div>
      </div>

      <!-- Mobile Navigation Button -->
      <button 
        id="mobileMenuButton"
        class="md:hidden p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100"
        aria-label="Open menu"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="hidden md:hidden">
      <div class="pt-2 pb-4 space-y-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50 rounded-md"
          >
            {item.label}
          </a>
        ))}
      </div>
      <div class="pt-4 pb-3 border-t border-gray-200">
        <div class="flex items-center justify-center space-x-6 px-5">
          {socialLinks.map(({ platform, url, icon }) => (
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-500 hover:text-primary transition"
              aria-label={platform}
            >
              <span class="sr-only">{platform}</span>
              <Icon client:load icon={icon} width="24" height="24" />
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobileMenuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>