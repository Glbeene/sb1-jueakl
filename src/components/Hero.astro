---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background image with overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src="/images/couple-bg.jpg" 
      alt="Background" 
      class="w-full h-full object-cover object-top -translate-y-16 brightness-75 grayscale"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/60 to-black/80"></div>
  </div>
  
  <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Text content -->
    <div class="text-left space-y-8 max-w-2xl">
      <h1 class="text-5xl md:text-7xl font-display font-bold text-white">
        Limitless Livin'
      </h1>
      <p class="text-xl md:text-2xl text-gray-200 font-light max-w-xl">
        Live, Love, and Laugh Limitlessly
      </p>
      <div class="flex gap-4">
        <a
          href="/episodes"
          class="bg-white text-black px-8 py-3 rounded-lg font-medium hover:bg-gray-100 transition shadow-lg"
        >
          Listen Now
        </a>
        <a
          href="/about"
          class="border-2 border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white/10 transition"
        >
          Learn More
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Logo section - as a separate section below -->
<section class="relative bg-gray-100 py-24 overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute left-20 top-40 w-72 h-72 rounded-full bg-black/10 blur-3xl"></div>
  <div class="absolute right-40 bottom-20 w-96 h-96 rounded-full bg-black/5 blur-3xl"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative max-w-2xl mx-auto">
      <div class="absolute -left-3 -top-3 w-full h-full bg-white/10 rounded-lg backdrop-blur-sm transform rotate-3"></div>
      <div class="relative z-10 bg-white/90 backdrop-blur-sm p-8 rounded-lg shadow-xl">
        <img 
          src="/images/logo.png" 
          alt="Limitless Livin'" 
          class="w-full h-auto rounded"
        />
      </div>
    </div>
  </div>
</section>