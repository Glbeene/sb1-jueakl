---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Blog - Limitless Livin'">
  <div class="min-h-screen pt-20">
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-display font-bold mb-6">Our Blog</h1>
        <div class="bg-gray-50 rounded-lg p-12">
          <h2 class="text-2xl font-display font-bold text-gray-800 mb-4">Coming Soon</h2>
          <p class="text-gray-600 mb-6">We're working on creating valuable content to share with you.</p>
          <p class="text-gray-600">Stay tuned for relationship insights, personal stories, and practical marriage advice.</p>
        </div>
      </div>
    </section>
  </div>
</Layout>